@model Shop.ViewModels.HomeViewModel

@using Shop.Infrastructure
@{
    ViewBag.Title = "Strona główna";
}


<div class="container">
    <div class="row">

        @Html.Action("CategoriesMenu", "Audiobooks")

        <div class="col-md-9">

            <div class="container mt-3">
           

                <div id="myCarousel" class="carousel slide my-4" data-ride="carousel">

                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ul>

                    <!-- The slideshow -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/Images/Carousel/Screenshot_18.png" alt="Ogłoszenie 1" width="1100">

                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/Images/Carousel/Screenshot_19.png" alt="Ogłoszenie 2" width="1100">

                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/Images/Carousel/Screenshot_20.png" alt="Ogłoszenie 3" width="1100">

                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>

            <div class="row">
                <h2 class="col-md-12" style="text-align:center"> NOWOŚCI </h2>
                @foreach (var news in Model.News)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">

                            <a href="@Url.Action("Details", "Audiobooks", new { id = news.AudiobookId })">
                                <center>
                                    <img style="max-width:250px; max-height:250px" class="card-img-top" src="@Url.ImagesPath(news.ImageFileName)" alt="Zdjęcie człowieka w kapturze z pochodnią">


                                </center>
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@Url.Action("Details", "Audiobooks", new { id = news.AudiobookId })">@news.NameAudiobook</a>
                                </h4>
                                <h5>@news.PriceAudiobook zł</h5>
                                @* <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. A   met numquam aspernatur!</p>*@
                            </div>

                            <a  id="addToCart" role="button" class="btn btn-dark" href="@Url.Action("AddToCart", "Cart", new { id = news.AudiobookId })">
                               Dodaj do koszyka
                            </a>


                        </div>
                    </div>
                }
            </div>
            <!-- /.row -->


            <div class="row">
                <h2 class="col-md-12" style="text-align:center"> BESTSELLERY </h2>
                @foreach (var news in Model.Bestsellers)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">

                            <a  href="@Url.Action("Details", "Audiobooks", new { id = news.AudiobookId })">

                                <center>
                                    <img style="max-width:250px; max-height:250px" class="card-img-top" src="@Url.ImagesPath(news.ImageFileName)" alt="Zdjęcie człowieka w kapturze z pochodnią">


                                </center>
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@Url.Action("Details", "Audiobooks", new { id = news.AudiobookId })">@news.NameAudiobook</a>
                                </h4>
                                <h5>@news.PriceAudiobook zł</h5>
                                @* <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. A   met numquam aspernatur!</p>*@
                            </div>

                            <a id="addToCart"  role="button" class="btn btn-dark" href="@Url.Action("AddToCart", "Cart", new { id = news.AudiobookId })">
                               Dodaj do koszyka
                            </a>


                        </div>
                    </div>
                }
            </div>

        </div>


    </div>

</div>



@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

}


